@model IEnumerable<Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Courses</h2>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CERTIFICATION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseCategory)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img width="100" src="~/assets/img/course/@item.Image" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CERTIFICATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCategory.Name)
            </td>
            <td>
                <a class="btn btn-dark" asp-action="Update" asp-route-id="@item.Id">Update</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
